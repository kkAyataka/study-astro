[*]
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4

[*.rst]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2

[*.{yml,yaml,json,xml}]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2

[*.py]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4

[*.{html,template,js,css}]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2

[*.{cpp,hpp,c,h}]
indent_style = space
indent_size = 4
